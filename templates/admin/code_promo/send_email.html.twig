{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">
    <h2>Envoyer le code promo <span class="text-primary">{{ promo.code }}</span> par email</h2>
    {% if sent %}
        <div class="alert alert-success">Le code promo a bien été envoyé !</div>
    {% else %}
        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email du client</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="client@email.com" required>
            </div>
            <button type="submit" class="btn btn-primary">Envoyer le code promo</button>
        </form>
    {% endif %}
    <a href="{{ path('admin') }}" class="btn btn-link mt-3">Retour à l'administration</a>
</div>
{% endblock %}

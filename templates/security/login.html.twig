{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 400px;">
        <h1 class="mb-4">Connexion</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">{{ message }}</div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-danger">
                Votre adresse email ou votre mot de passe est incorrect. Veuillez vérifier. Échec de connexion.
            </div>
        {% endif %}
        <form method="post" action="{{ path('app_login') }}">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Adresse email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus autocomplete="email">
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required autocomplete="current-password">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-primary w-100" type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
	{% include '_partials/_hero.html.twig' %}
	{% include '_partials/_breadcrumb.html.twig' %}

	<div class="card mb-4">
		<div class="card-header d-flex justify-content-between align-items-center bg-white" style="padding: 1.2rem 2rem 0.5rem 2rem;">
			<span class="fw-bold fs-4">Pr√©sentation du produit</span>
			<div class="d-flex align-items-center gap-2">
				<span class="fw-bold">Avis client</span>
				<span class="ms-2">
					{% set total = reviews|length %}
					{% if total > 0 %}
						{% set avg = (reviews|map(r => r.rating)|reduce((a, b) => a + b) / total) %}
						{% for i in 1..5 %}
							{% if i <= avg %}
								<i class="bi bi-star-fill text-warning"></i>
							{% else %}
								<i class="bi bi-star text-warning"></i>
							{% endif %}
						{% endfor %}
						<span class="text-dark ms-1">{{ avg|number_format(1) }}/5</span>
						<span class="text-muted ms-1">({{ total }}
							avis)</span>
					{% else %}
						{% for i in 1..5 %}
							<i class="bi bi-star text-warning"></i>
						{% endfor %}
						<span class="text-muted ms-1">Pas encore d'avis</span>
					{% endif %}
				</span>
			</div>
		</div>
		<div class="card-body">
			<div
				class="row g-4">
				<!-- Colonne gauche : images -->
				<div class="col-lg-5 col-md-5 col-12 mb-3">
					<img
					src="/uploads/product_images/{{ product.ImageFolder }}/{{ product.mainImage }}" alt="image principale du produit" id="mainProductImage" class="img-fluid rounded shadow-sm mb-3 bg-white" style="height: 260px; width: 100%; object-fit: contain; display: block; margin: auto; cursor:pointer;" onerror="this.onerror=null;this.src='/konvix_ecommerce/images/placeholder.png';">
					{# Affichage des miniatures, ou de l'image principale si aucune miniature #}
					{% set mainImg = '/uploads/product_images/' ~ product.ImageFolder ~ '/' ~ product.mainImage %}
					{% if thumbnails is defined and thumbnails|length > 0 %}
						<div class="row row-cols-auto g-2 justify-content-center mt-2">
							{% set displayed = 0 %}
							{% for img in thumbnails %}
								{% if '/placeholder.png' not in img %}
									<div class="col">
										<img src="{{ img }}" alt="Miniature produit" class="img-thumbnail thumb-img {% if loop.first %}border-primary{% endif %}" style="width:70px; height:70px; object-fit:cover; cursor:pointer; border:2px solid {% if loop.first %}#0072ff{% else %}#eee{% endif %}; transition:box-shadow 0.2s, border-color 0.2s;" data-img="{{ asset(img) }}">
									</div>
									{% set displayed = displayed + 1 %}
								{% endif %}
							{% endfor %}
							{% if displayed == 0 %}
								<div class="col">
									<img src="/konvix_ecommerce/images/placeholder.png" alt="Miniature placeholder" class="img-thumbnail thumb-img border-primary" style="width:70px; height:70px; object-fit:cover; cursor:pointer; border:2px solid #0072ff;">
								</div>
							{% endif %}
						</div>
					{% else %}
						<div class="d-flex gap-2 justify-content-center mt-2 flex-wrap">
							<img src="{{ mainImg }}" alt="Miniature principale" class="img-thumbnail thumb-img" style="width:70px; height:70px; object-fit:cover; cursor:pointer; border:2px solid #0072ff; transition:box-shadow 0.2s, border-color 0.2s;" data-img="{{ asset(mainImg) }}">
						</div>
					{% endif %}
				</div>

				<!-- Colonne centrale : infos produit -->
				<div class="col-lg-4 col-md-7 col-12 mb-3" style="padding-left:50px;">
					<h1 class="fw-bold">{{ product.name }}</h1>
					<p class="fs-2 fw-bold text-danger">{{ product.price|number_format(2, '.', ' ') }}
						‚Ç¨</p>
					<p>
						<span class="text-muted">Cat√©gorie :</span>
						{{ product.category.name }}</p>
					<p>
						<span class="text-muted fw-semibold">
							<i>Vendu et exp√©di√© par :</i>
						</span>
						{{ product.seller.name }}</p>
					<div class="d-flex gap-4 my-3 flex-wrap">
						<span class="fw-bold text-secondary">R√©f√©rence du produit :
							{{ product.id }}</span>
					</div>
					<span class="text-secondary mb-2 d-block">
						<i class="bi bi-heart"></i>
						Favoris
					</span>
					<hr class="my-3">

				</div>
				<!-- Colonne droite : stock, panier, paiement -->
				<div class="col-lg-3 col-md-12 col-12 mb-3">
					<div class="bg-success bg-opacity-10 border-start border-success border-4 rounded-2 p-2 mb-2" style="max-width: 220px;">
						<span class="fw-bold text-success">En stock :
							{{ product.stock ?? 0 }}</span><br>
						<span class="text-success">
							<i class="bi bi-check-circle"></i>
							unit√©(s) disponible(s)
						</span>
					</div>
					<form method="get" action="{{ path('cart_add', {'id': product.id}) }}" class="mb-3">
						<label for="quantity" class="form-label">Quantit√©</label>
						<input type="number" id="quantity" name="quantity" value="1" min="1" class="form-control mb-2" style="max-width: 80px;">
						{% if product.stock <= 0 %}
							<div class="alert alert-danger text-center fw-bold fs-5">
								üö´ Ce produit est en rupture de stock
							</div>
						{% elseif product.stock <= 2 %}
							<div class="alert alert-warning text-center fw-bold fs-6">
								‚ö†Ô∏è Stock tr√®s limit√© :
								{{ product.stock }}
								unit√©(s)
							</div>
						{% endif %}
						<button type="submit" class="btn btn-primary w-100 mb-2" style="font-size:1.15em; padding:0.7em 0;">
							<i class="bi bi-cart-plus"></i>
							Ajouter au panier
						</button>
					</form>
					<div class="bg-light border rounded p-3 mt-2">
						<div class="fw-bold mb-2">
							<i class="bi bi-shield-lock"></i>
							Paiement s√©curis√©
						</div>
						<div class="d-flex align-items-center gap-3 mt-2 flex-wrap">
							<img src="/uploads/product_images/PaiementS√©curis√©.jpg" alt="Stripe" style="height:30px; width:auto; background:#fff; padding:4px 10px 4px 6px; border-radius:4px; border:1px solid #eee; display:inline-block; object-fit:contain;">
							<img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/PayPal.svg" alt="PayPal" style="height:24px; width:auto; background:#fff; padding:4px 10px 4px 6px; border-radius:4px; border:1px solid #eee; display:inline-block; object-fit:contain;">
						</div>
					</div>
				</div>

				<!-- Bloc horizontal description du produit -->
				<div class="card mt-4 p-4">
					<h5 class="mb-3">
						<i class="bi bi-info-circle"></i>
						Description du produit
					</h5>
					{{ product.description |raw }}

					{# Formulaire de suppression produit avec CSRF #}
